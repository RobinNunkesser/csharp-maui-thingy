<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Thingy"
             x:DataType="local:MainViewModel"
             x:Class="Thingy.MainPage"
             IsPresented="{Binding IsMenuVisible}">
    <FlyoutPage.Flyout>
        <ContentPage Title="Menu">
            <TableView Intent="Menu">
                <TableRoot>
                    <TableSection Title="BluetoothLE (Client)">
                        <TextCell Text="Scan" Command="{Binding Navigate}" CommandParameter="BleScan" />
                        <TextCell Text="Sensors" Command="{Binding Navigate}" CommandParameter="Sensors" />
                    </TableSection>
                </TableRoot>
            </TableView>
        </ContentPage>
    </FlyoutPage.Flyout>
    
    <FlyoutPage.Detail>
        <NavigationPage>
            <x:Arguments>
                <ContentPage Title="Welcome">
                    <Label Text="Welcome"/>
                </ContentPage>
            </x:Arguments>
        </NavigationPage>
    </FlyoutPage.Detail>
</FlyoutPage>
